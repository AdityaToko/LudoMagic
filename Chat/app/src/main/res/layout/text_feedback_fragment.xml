<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
             android:layout_gravity="center"
             android:alpha=".95"
                android:padding="20dp"
             android:background="@drawable/rounded_background">

    <com.nuggetchat.messenger.utils.CustomFontTextView
        android:id="@+id/text_feedback_fragment_question"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/text_feedback_title"
        android:textAllCaps="true"
        android:textColor="@color/profile_title_text_color"
        android:textSize="@dimen/feedback_title_text_size"
        android:textStyle="bold"
        app:font_name="Questrian.otf"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_feedback_fragment_question"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/feedback_content"
            android:layout_width="320dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/text_feedback_content_border"
            android:gravity="top"
            android:hint="@string/feedback_edit_text"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingTop="20dp"
            android:textColorHint="@color/card_expand_title_color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/text_feedback_send_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_below="@id/feedback_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@color/feedback_send_button"
            android:text="@string/send_button_text"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>