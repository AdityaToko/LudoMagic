<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_incoming_call"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat.IncomingCallActivity">

    <Button
        android:id="@+id/reject_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reject"
        android:textColor="@color/colorWhite"
        android:background="@color/reject_btn_color"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp" />

    <Button
        android:id="@+id/accept_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:textColor="@color/colorWhite"
        android:background="@color/accept_btn_color"
        android:layout_above="@+id/reject_btn"
        android:layout_alignLeft="@+id/reject_btn"
        android:layout_alignStart="@+id/reject_btn"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/caller_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Caller Name"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp" />

    <TextView
        android:id="@+id/calling_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calling"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/caller_name_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
</RelativeLayout>
