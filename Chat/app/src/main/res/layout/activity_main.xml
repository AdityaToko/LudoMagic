<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.nuggetchat.messenger.activities.MainActivity">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <VideoView
            android:id="@+id/nugget_login_anim"
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>

        <FrameLayout
            android:id="@+id/video_placeholder"
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/nugget_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nugget_login_anim"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:visibility="invisible"
            android:text="@string/nugget_line"
            android:textColor="#252525"
            android:textSize="30sp"/>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/login_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        />

    <TextView
        android:id="@+id/fb_disclaimer"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:textColor="#a1a1a1"
        android:textSize="12sp"
        android:text="@string/fb_disclaimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/login_page_text4"
        android:layout_above="@id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:textColor="#544a63"
        android:textSize="15sp"
        android:visibility="invisible"
        android:text="@string/login_page_line4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/login_page_text3"
        android:layout_above="@id/login_page_text4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="9dp"
        android:gravity="center"
        android:textColor="#544a63"
        android:textSize="15sp"
        android:visibility="invisible"
        android:text="@string/login_page_line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/login_page_text2"
        android:layout_above="@id/login_page_text3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="9dp"
        android:gravity="center"
        android:textColor="#544a63"
        android:textSize="15sp"
        android:visibility="invisible"
        android:text="@string/login_page_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/login_page_text1"
        android:layout_above="@id/login_page_text2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="9dp"
        android:gravity="center"
        android:textColor="#544a63"
        android:textSize="15sp"
        android:visibility="invisible"
        android:text="@string/login_page_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
