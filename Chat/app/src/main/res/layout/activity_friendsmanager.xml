<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activities.MainActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:id="@+id/contacts_list"/>

    <Button
        android:id="@+id/send_share_intent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="280dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:background="@color/send_message_other_friends"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content"
        android:onClick="sendShareIntent"
        android:text="Send message to other friends"/>

    <Button
        android:id="@+id/postMessagetoFBFriends"
        android:layout_above="@id/send_share_intent"
        android:layout_centerHorizontal="true"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:background="@color/send_message_facebook_friends"
        android:onClick="sendMessagetoFriends"
        android:text="Send Message to Facebook Friends"/>

</RelativeLayout>