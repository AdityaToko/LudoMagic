<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activities.MainActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:id="@+id/contacts_list"/>

    <LinearLayout
        android:id="@+id/invite_buttons_layout"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/send_share_intent"
            android:layout_alignParentBottom="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:textSize="13sp"
            android:background="@drawable/rounded_fb_invite_button"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content"
            android:onClick="sendMessagetoFriends"
            android:text="add facebook friends"/>

        <Button
            android:id="@+id/postMessagetoFBFriends"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/rounded_invite_button"
            android:onClick="sendShareIntent"
            android:text="add other friends"/>

    </LinearLayout>

</RelativeLayout>