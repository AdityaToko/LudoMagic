<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/add_friends_header"
        android:text="Add Friends"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/add_friend_background"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingRight="15dp"
        android:paddingEnd="15dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:id="@+id/quick_play"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Quick Play"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:textColor="#f24444"
        android:layout_below="@id/add_friends_header"/>

    <View
        android:id="@+id/quick_play_underline"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_below="@id/quick_play"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="#c0c0c0"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/quick_play_underline"
        android:id="@+id/contacts_list"/>

    <LinearLayout
        android:id="@+id/invite_buttons_layout"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/send_share_intent"
            android:layout_alignParentBottom="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:textSize="13sp"
            android:background="@drawable/rounded_fb_invite_button"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content"
            android:onClick="sendMessagetoFriends"
            android:text="add facebook friends"/>

        <Button
            android:id="@+id/postMessagetoFBFriends"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/rounded_invite_button"
            android:onClick="sendShareIntent"
            android:text="add other friends"/>

    </LinearLayout>

</RelativeLayout>